<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffefeff6"
    android:padding="10dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip">
        <ImageView
            android:id="@+id/status_image_view"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:padding="1dp"
            android:src="@drawable/unknown"
            android:layout_alignParentRight="true" />
        <LinearLayout
            android:id="@+id/lock_short_discription"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip">
            <TextView
                android:id="@+id/lock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF7F3300"
                android:textSize="20dip"
                android:textStyle="bold|italic"
                android:text="Name" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dip">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lock_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Starcom Watchlock"
                        android:textSize="14dip"
                        android:textColor="#FF267F00"
                        android:textStyle="italic" />
                    <TextView
                        android:id="@+id/lock_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Airport North Road Nairobi Nairobi 00200 KE"
                        android:textSize="11dip"
                        android:textColor="#0B2545"
                        android:textStyle="italic" />
                    <TextView
                        android:id="@+id/lock_last_seen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Seen: N\A"
                        android:textSize="10dip"
                        android:textColor="#AA0B2545"
                        android:textStyle="italic" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>