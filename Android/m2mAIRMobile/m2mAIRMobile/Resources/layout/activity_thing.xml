<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Android.Source.Views.NavigationBarView
        android:id="@+id/NavigationBarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Android.Source.Views.ThingBriefDescriptionView
        android:id="@+id/ThingBriefDescriptionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <fragment
        class="m2m.Android.Source.Views.ThingMapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:drawablePadding="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp" />
    <Button
        android:id="@+id/locationHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location history" />
    <Button
        android:id="@+id/properties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Properties" />
</LinearLayout>