<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Android.Source.Views.NavigationBarView
        android:id="@+id/NavigationBarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Android.Source.Views.ThingBriefDescriptionView
        android:id="@+id/ThingBriefDescriptionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Android.Source.Views.ChartsView
        android:id="@+id/chartsView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip">
        <Button
            android:id="@+id/mode_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="History" />
        <Button
            android:id="@+id/mode_continuous"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="continuous" />
    </LinearLayout>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#FFDAFF7F" />
</LinearLayout>